{
  "name": "AIVideoMaker",
  "version": "1.0.0",
  "description": "AI Video Maker",
  "main": "dist/app.js",
  "author": {
    "name": "Danford Gidraph",
    "url": "https://gidraphdanford.dev",
    "email": "gidraph@gidraphdanford.dev"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "tsx src/app.ts",
    "clean": "rm -rf ./dist",
    "lint": "eslint src/**/*.ts --fix",
    "start:dev": "./node_modules/nodemon/bin/nodemon.js",
    "build": "yarn clean && tsc && tsc-alias && yarn copy-files",
    "start": "NODE_OPTIONS=\"--import=./register.js\" node dist/app.js",
    "copy-files": "cp -r ./src/data/ ./dist/data/ && cp -r ./src/assets/ ./dist/assets/"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "eslint": "8.57.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@data": "./src/data",
    "@assets": "./src/assets",
    "@handlers": "./src/handlers",
    "@typings": "./src/typings",
    "@helpers": "./src/helpers",
    "@utilities": "./src/utilities",
    "@middlewares": "./src/middlewares"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "parser": "typescript",
      "style": "import-sort-style-module"
    }
  },
  "packageManager": "yarn@4.9.2"
}
