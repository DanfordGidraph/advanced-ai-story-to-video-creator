{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "plugins": ["import"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@data", "./src/data"],
          ["@assets", "./src/assets"],
          ["@handlers", "./src/handlers"],
          ["@typings", "./src/typings"],
          ["@helpers", "./src/helpers"],
          ["@utilities", "./src/utilities"],
          ["@middlewares", "./src/middlewares"]
        ],
        "extensions": [".ts", ".js", ".json"]
      }
    }
  },
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "no-console": "error"
  }
}
